<div class="ui fixed menu borderless">
	<div class="ui container">
		<div class="left menu">
			<a class="item brand">
				<%= image_tag 'coe_logo.png', class: 'ui tiny middle aligned image' %>
				<h1 class="ui header white spaced">
					FRIA
					<div class="sub header white">
					Faculty Research Incentive Award
					</div>
				</h1>
			</a>
		</div>
		<div class="right menu">
			<% unless user_signed_in? %>
				<%= form_for(@user, :url => session_path(@user), :html => {class: "ui form", id: "login"}) do |f| %>
					<div class="fields">
						<div class="field">
							<%= f.label :email %>
							<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
						</div>
						<div class="field">
							<%= f.label :password %>
							<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
						</div>
						<%= f.submit "Login", class: "ui button" %>
					</div>
				<% end %>
			<% else %>
				<div class="item white">
					Hello, <%= "#{current_user.first_name} #{current_user.last_name}" %>
				</div>
				<div id="logout">
					<%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'ui button') %>  
				</div>
			<% end %>
		</div>
	</div>
</div>
<%- # this is for the buffer of the nav bar. %>
<div style="margin-top: 126px;"></div>