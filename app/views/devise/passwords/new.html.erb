<div class="ui text container">
  <h2>Forgot your password?</h2>
  <div class="ui segment" style="margin-bottom: 10px;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.submit "Send me reset password instructions", class: 'ui button orange' %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>

</div>
